---
import { CountyPhoneList } from "@1pro/components";
import { getStates } from "../data/utils";
import PageLayout from "../layouts/Page.astro";

const states = await getStates(true);
---

<PageLayout title="Sitemap - 1ProFire">
  <Fragment slot="title">
    <span>Sitemap</span>
  </Fragment>
  {states.map(state => (
    <div class="text-md">
      <h2><a href={state.url}>{state.name}</a></h2>
      <CountyPhoneList counties={state.counties} />
    </div>
  ))}
  <h2><a href="/about/">About</a></h2>
  <h2><a href="/find-a-location/">Find a Location</a></h2>
</PageLayout>
