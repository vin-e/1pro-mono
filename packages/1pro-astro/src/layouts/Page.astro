---
import Layout from "./Layout.astro";
// const { meta } = Astro.props;
---

<Layout>
  <section class="px-8 sm:px-6 py-8 sm:py-12 mx-auto max-w-3xl">
    <header>
      <h1
        class="text-center text-2xl md:text-3xl font-bold leading-tighter tracking-tighter mb-8 md:mb-16 font-heading"
      >
        <slot name="title" />
      </h1>
    </header>
    <div
      class="container mx-auto px-8 sm:px-6 max-w-3xl prose prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-primary-600 prose-img:rounded-md prose-img:shadow-lg mt-4"
    >
      <slot />
    </div>
  </section>
</Layout>