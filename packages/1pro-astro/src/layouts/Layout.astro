---
import Fonts from '../components/atoms/Fonts.astro';
import Head from '../components/atoms/Head.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

export interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="motion-safe:scroll-smooth 2xl:text-[24px]">
	<Head title={title} />
	<body class="antialiased text-gray-900 tracking-tight bg-white">
		<Header />
		<slot />
		<Footer />
	</body>
</html>
