---
import Logo from "./atoms/Logo.astro";
import ToggleMenu from "./atoms/ToggleMenu.astro";
---

<header
  class="flex-none mx-auto w-full bg-white md:bg-white/90 md:backdrop-blur-sm"
>
  <div
    class="py-3 px-3 mx-auto w-full md:flex md:justify-between max-w-6xl md:px-4"
  >
    <div class="flex justify-between">
      <a
        class="flex items-center text-primary-600 hover:text-primary-800"
        href="/"
      >
        <Logo />
      </a>
      <div class="flex items-center md:hidden">
        <ToggleMenu />
      </div>
    </div>
    <nav
      class="items-center w-full mt-2 rounded-lg shadow-lg md:w-auto md:flex text-gray-600 bg-primary-100 h-auto"
      aria-label="Main navigation"
      id="menu"
    >
      <ul
        class="flex flex-col p-2 md:pt-0 md:flex-row md:self-center w-full md:w-auto text-xl md:text-base"
      >
        <li>
          <a
            class="font-medium hover:text-gray-900 px-4 py-3 flex items-center transition duration-150 ease-in-out"
            href="/find-a-location/"
            >Find a Location
          </a>
        </li>
        <li>
          <a
            class="font-medium hover:text-gray-900 px-4 py-3 flex items-center transition duration-150 ease-in-out"
            href="/ca/"
            >California
          </a>
        </li>
        <li>
          <a
            class="font-medium hover:text-gray-900 px-4 py-3 flex items-center transition duration-150 ease-in-out"
            href="/fl/"
            >Florida
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>
