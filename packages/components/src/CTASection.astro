---
import CTALink from './CTALink.astro';

export interface Props {
	email: string;
	phone: string;
}

const { email, phone } = Astro.props;
---


<div class="text-center bg-blue-100 p-6">
  <h2 class="text-2xl font-bold mb-6">Contact Us Today!</h2>
  <div class="flex justify-center align-middle items-stretch gap-3 ">
    <CTALink href={`tel:${phone}`} text={phone} />
    <div class="py-2.5 text-sm">OR</div> 
    <CTALink href={`email:${email}`} text={email} color="stone" />
  </div>
</div>