---
import CTALink from './CTALink.astro';

export interface Props {
	email?: string;
	phone?: string;
}

const { email, phone } = Astro.props;
---


<div class="bg-slate-800 text-white p-8 my-12 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center">
  {(phone || email) && 
    <h2 class="text-2xl font-bold mb-6">Contact Us Today!</h2>
    <div class="flex justify-center align-middle items-stretch gap-3 ">
      {phone && <CTALink href={`tel:${phone}`} text={phone} />}
      {phone && email && <div class="py-2.5 text-sm">OR</div>}
      {email && <CTALink href={`email:${email}`} text={email} color="stone" />}
    </div>
  }
  {!phone && !email && 
    <h2 class="text-2xl font-bold mb-6">Looking for {import.meta.env.VITE_FULL_SERVICES_TITLE}?</h2>
    <CTALink href="/find-a-location/" text="Find a location near you!" color="amber" />
  }
</div>